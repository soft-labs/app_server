.ui.two.stackable.cards

    // **** Chart Desempenho **** //
    .ui.card
        .content
            span.right.floated
                +periodo('dbms.financeiro.fin_lancamentos')
            .header Desempenho Projetado
            .meta 1o Semestre / 2016

        .description.app-no-border(
            rv-class-app-blue-box="cockpit.struct.forecast.result | isGreater '0'"
            rv-class-app-red-box="cockpit.struct.forecast.result | isLess '0'"
        )
            canvas#chart_forecast
        .extra.content
            span.right.floated
                | Resultado Projetado: R$ {cockpit.struct.forecast.result | numberFormat 2 ',' '.'}

            span
                i.settings.icon
                | Configurar




    // **** Chart Impacto **** //
    .ui.fluid.card
        .content
            //i.right.floated.warning.sign.icon
            .header Mapa de Impacto
            .meta Principais Receitas e Despesas do Período
        .description.app-no-border(
            rv-class-app-blue-box="cockpit.struct.forecast.result | isGreater '0'"
            rv-class-app-red-box="cockpit.struct.forecast.result | isLess '0'"
        )
            canvas#chartImpacto
        .extra.content
            span.right.floated
                i.info.circle.icon
                | 1o Semestre / 2016

            span
                i.settings.icon
                | Configurar



    // **** Despesas **** //
    .ui.card
        .content
            span.right.floated.ui.secondary.menu
                i.cursor.external.icon(
                    server='dbms financeiro fin_apagar list'
                    area='app-financas'
                    subarea='app-apagar'
                )


            .header Pagamentos Programados
            .meta &nbsp;&nbsp;Período {periodo.de} à {periodo.ate}
            .description
                canvas.transition.hidden#piePagtos

                // Listagem
                +listFinanceiro(false)


        .extra.content
            span.right.floated
                | Total à Pagar: R$ {dbms.financeiro.fin_apagar.data.group._stats.sum.valor_bruto | money}



    // **** Receitas **** //
    .ui.card
        .content
            span.right.floated.ui.secondary.menu
                .ui.dropdown.item
                    i.options.icon
                    span.text Vencimento
                    .menu
                        .item(
                            rv-each-menu='cockpit.struct.receitas.options'
                            rv-on-click='cockpit.popSubmenu'
                            rv-data-key='menu._index_'
                            data-sub='receitas'
                            style="white-space: nowrap;"
                        )
                            i(rv-class='menu.icon')
                            span.text {menu.label}

            span.right.floated.ui.secondary.menu
                .ui.dropdown.item
                    span.text
                        i.pie.list.icon
                        | Listagem
                    .menu
                        .active.item(rv-on-click='cockpit.showListRec')
                            i.list.icon
                            span.text Listagem
                        .item(rv-on-click='cockpit.showChartRec')
                            i.pie.chart.icon
                            span.text Gráficos

            .header Recebimentos Programados
            .meta &nbsp;&nbsp;Período {periodo.de} à {periodo.ate}
            .description
                canvas.transition.hidden#pieRec

                // Listagem
                +listFinanceiro(true)


        .extra.content
            .right.floated
                | Total à Receber: R$ {dbms.financeiro.fin_areceber.data.group._stats.sum.valor_bruto | money}
