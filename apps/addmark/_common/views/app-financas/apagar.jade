.ui.container.transition.hidden.app-apagar
    .ui.fluid.card
        .content

            // Menu Agrupamento
            span.right.floated.ui.secondary.menu
                .ui.labeled.icon.selection.dropdown.pivot.apagar
                    i
                    span.text
                    .menu
                        .header
                            i.options.icon
                            | Agrupar por...
                        .divider
                        .item(
                           rv-each-menu='dbms.financeiro.fin_apagar.pivotOpts'
                           rv-data-value='menu.value'
                           style="white-space: nowrap;"
                        )
                            i(rv-class='menu.icon')
                            | {menu.label}

            // Menu Listagem / Chart
            span.right.floated.ui.secondary.menu
                .ui.labeled.icon.selection.dropdown.display.apagar
                    i
                    span.text
                    .menu
                        .header
                            i.options.icon
                            | Visualizar...
                        .divider
                        .item(
                            rv-each-menu='dbms.financeiro.fin_apagar.displayOpts'
                            rv-data-value='menu.value'
                            style="white-space: nowrap;"
                        )
                            i(rv-class='menu.icon')
                            | {menu.label}

            // Listagem
            .header Pagamentos Programados
            .meta Período 01/05/2016 à 25/05/2016
            .description

                // Gráfico
                canvas.transition.hidden#chart_apagar

                // Listagem
                .ui.fluid.styled.accordion.non-exclusive.lista.apagar
                    span(rv-each-row='dbms.financeiro.fin_apagar.data.group')
                        .active.title
                            i.dropdown.icon
                            | {row.label}
                        .active.content
                            .ui.bottom.aligned.stackable.grid
                                .row.cursor.app-grid-rows(
                                    rv-each-item='row.values'
                                    rv-data-key='item.fin_lancamentos_key'
                                    data-action='dbms financeiro fin_apagar edit'
                                )
                                    .thirteen.wide.column
                                        | {item.parceiro} -
                                        | {item.descricao}
                                    .three.wide.column.right.aligned.app-despesa {item.valor_bruto | money}
                                .row.app-grid-rows
                                    .column.right.aligned.app-despesa-sum {row._stats.sum.valor_bruto | money}


        .extra.content
            span.right.floated
                | Total à Pagar: R$ {dbms.financeiro.fin_apagar.data.group._stats.sum.valor_bruto | money}

#form_apagar.ui.modal
    .header
        i.big.browser.icon
        |  Lançamentos à Pagar
    div.content
        .description#form_area_apagar
    div.actions
        div.ui.green.button.ok(
            data-action='dbms financeiro fin_apagar save',
        ) Salvar Alterações
        div.ui.orange.button.cancel Cancelar
