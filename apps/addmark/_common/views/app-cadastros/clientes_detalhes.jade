        .ui.items
            .item
                a.ui.small.image
                    img(
                        src='http://semantic-ui.com/images/wireframe/image.png'
                    )
                .content
                    a.header {dbms.empresas.emp_clientes.data.row.parceiro}
                    .description
                        p
