extends ../../../../_common/views/header

// Título do app
block title
    title='Addmark - RetailPRO - Financeiro'


// Estilos do app
block app_css


// Javascripts do app
block app_scripts


block content
    div.ui.app
        #login.ui.fluid.container
            img#logo_tshark.ui.image.cursor(src='imgs/_logos/tshark.png')

            #login_form.ui.form.ts-center(style='height: 30%; width: 40%;')
                .ui.card.fluid(style='box-shadow: 0 0 21px -6px black;')
                    .content
                        .header Login
                        .meta Bem vindo ao sistema financeiro AddMark - Retail Pro
                            br
                            | Identifique-se, por favor.
                        .description
                            .ui.grid
                                .ten.wide.column
                                    .ui.form
                                        .field
                                            label Usuário
                                            .ui.left.icon.input
                                                input#username(type='text',
                                                    rv-value='sys.app.security.data.row.username',
                                                    placeholder='Informe o seu usuário',
                                                    client-onenter='sys app security login',
                                                )
                                                i.user.icon
                                        .field
                                            label Senha
                                            .ui.left.icon.input
                                                input#password(type='password',
                                                    rv-value='sys.app.security.data.row.password',
                                                    placeholder='Informe sua senha',
                                                    client-onenter='sys app security login'
                                                )
                                                i.lock.icon

                                .one.wide.column
                                    .ui.vertical.divider
                                        i.lock.icon

                                .five.wide.column
                                    img.ui.image(src='imgs/_logos/addmark_horizontal.png', style='margin-top: 54px; opacity: 0.9;')
                    .extra.content
                        .ui.right.floated.green.button(server='sys app security login') Clique para Acessar
