//
   Template para o seletor de períodos

mixin periodo(modulo)
    | Período: &nbsp;
    .ui.basic.mini.button(client='app periodo changeDe', data-modulo=modulo)
        | {periodo.de}&nbsp;&nbsp;&nbsp;
        i.calendar.icon

    | &nbsp; à &nbsp;

    .ui.basic.mini.button(client='app periodo changeAte', data-modulo=modulo)
        | {periodo.ate}&nbsp;&nbsp;&nbsp;
        i.calendar.icon

