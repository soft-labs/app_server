extends ../../../../_common/views/header

// Título do app
block title
    title='Addmark - RetailPRO - Financeiro'


// Estilos do app
block app_css


// Javascripts do app
block app_scripts
    script(type='application/javascript', src='cockpit.js')
    script(type='application/javascript', src='configuracoes.js')


block content
    div.ui
        #login.ui.fluid.container
            img#logo_tshark.ui.image.cursor(src='imgs/_logos/tshark.png')

            #login_form.ui.form.ts-center(style='height: 467px;width: 24em;')
                .ui.card.fluid(style='box-shadow: 0 0 21px -6px black;')
                    .content
                        img.ui.image(src='imgs/_logos/mlanna3.png', style='opacity: 0.9;margin-bottom: 11px;')
                        .header Login
                        .meta Bem vindo ao sistema Martins Lanna
                            | Identifique-se, por favor.
                        .description
                            .ui.form
                                .field
                                    label Usuário
                                    .ui.left.icon.input
                                        input#username(type='text',
                                            rv-value='sys.app.security.data.row.username',
                                            placeholder='Informe o seu usuário',
                                            rv-on-keydown='login'
                                        )
                                        i.user.icon
                                .field
                                    label Senha
                                    .ui.left.icon.input
                                        input#password(type='password',
                                            rv-value='data.row.password',
                                            placeholder='Informe sua senha',
                                            rv-on-keydown='login'
                                        )
                                        i.lock.icon

                    .extra.content
                        .ui.right.floated.green.button(data-action='sys app security login') Clique para Acessar
