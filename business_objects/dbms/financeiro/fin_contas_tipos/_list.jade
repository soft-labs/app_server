table.ui.selectable.table
    thead
        tr.cursor
            th.two.wide Ativo
            th.thirteen.wide Tipo de Conta de Provisionamento
            th.one.wide
    tbody
        tr(
        rv-each-row='dbms.financeiro.fin_contas_tipos.data.rows'
        rv-row-key='row.fin_contas_tipos_key'
        )
            td
                .ui.toggle.checkbox
                    input(
                        type="checkbox"
                        rv-checked='row.ativo'
                        rv-row-key='row.fin_contas_tipos_key'
                        server-onchange='dbms financeiro fin_contas_tipos update'
                    )
            td(
            rv-row-key='row.fin_contas_tipos_key'
            server='dbms financeiro fin_contas_tipos edit'
            )
                i.edit.icon
                |  {row.tipo_conta}
            td
                .ui.checkbox
                    input(
                        type='checkbox'
                        rv-checked='row._selected_'
                        rv-row-selected='row._selected_'
                    )