table.ui.compact.striped.selectable.celled.table.choose-rows
    thead
        th Codigo
        th Banco
        th Url
    tbody
        tr.cursor(
            rv-each-row='choose.data.rows'
            rv-on-click='choose.select'
            rv-data-key='row.fin_bancos_key'
        )
            td {row.codigo}
            td
                img.ui.avatar.image(rv-src="row.codigo | replace '_imgs/_logos/bancos/%s.png'")
                | {row.banco}
            td {row.url}