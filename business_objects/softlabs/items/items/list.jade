.ui.fluid.card(rv-each-row='data.rows')
    .content
        .header {row.items_key} - {row.items_key}
        .meta Keys: item_categorias_key, item_categ_sub_key, cont_centros_resultado_key
        .description

    .extra.content
        span.left.floated.button
            button.ui.orange.icon.mini.button(rv-data-action='api.edit', rv-data-key='row.items_key')
                i.edit.icon
                | Editar

        span.right.floated.button
            button.ui.red.icon.mini.button(rv-data-action='api.delete', rv-data-key='row.items_key')
                i.delete.icon
                | Remover
