            th.one.wide
    tbody
        tr(
            rv-each-row='dreams.users.users.data.rows'
            rv-row-key='row.users_key'
        )
            td
                .ui.toggle.checkbox
                    input(
                        type="checkbox"
                        rv-checked='row._active'
                        rv-row-key='row.users_key'
                        server-onchange='dreams users users update'
                    )
            td
                .ui.toggle.checkbox
                    input(
                        type="checkbox"
                        rv-checked='row._banned'
                        rv-row-key='row.users_key'
                        server-onchange='dreams users users update'
                    )
