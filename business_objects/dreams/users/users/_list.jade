                rv-row-key='row.users_key'
                server='dreams users users edit'
            )
                i.edit.icon
                |  {row.username}

            td
                | {row.firstname} {row.lastname}

            td
                .ui.checkbox
                    input(
                        type='checkbox'
                        rv-checked='row._selected_'
                        rv-row-selected='row._selected_'
                    )
